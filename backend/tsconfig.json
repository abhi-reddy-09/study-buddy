{
  "compilerOptions": {
    // File Layout
    "rootDir": ".",
    "outDir": "dist",
    // Environment Settings
    "module": "commonjs",
    "target": "ES2020",
    "lib": [
      "ES2020"
    ],
    "types": [
      "node"
    ],
    "moduleResolution": "node",
    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    // Recommended Options
    "strict": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*",
    "generated/**/*"
  ],
  "exclude": [
    "prisma.config.ts",
    "**/*.test.ts"
  ]
}